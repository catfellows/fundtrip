<%- include('../layout/header') %>


<div id="wrapper">
    <div class="content">
        <section class="list-single-hero" data-scrollax-parent="true" id="sec1">
            <div class="bg par-elem " data-bg="<%= result.image %>" data-scrollax="properties: { translateY: '30%' }">
            </div>
            <div class="list-single-hero-title fl-wrap">
                <div class="container">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="listing-rating-wrap">
                                <div class="listing-rating card-popup-rainingvis"
                                    data-starrating2="<%= result.rating %>"></div>
                            </div>
                            <h2><span><%= result.name %></span></h2>
                            <div class="list-single-header-contacts fl-wrap">
                                <ul>
                                    <li><i class="far fa-phone"></i><a href="#"><%= result.phone %></a></li>
                                    <li><i class="far fa-map-marker-alt"></i><a href="#"><%= result.address %></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="list-single-hero-details fl-wrap">
                                <div class="list-single-hero-rating">
                                    <div class="rate-class-name">
                                        <div class="score"><strong>
                                                <% if(result.rating >= 4) { %>
                                                <strong>Recomended</strong> <small id="mydiv"></small>
                                                <% } else if( item.rating  >= 3){ %>
                                                <strong> Verry Good</strong> <small id="mydiv"></small>
                                                <% } else if( item.rating  >= 2){ %>
                                                <strong>Good</strong> <small id="mydiv"></small>
                                                <% } else { %>
                                                <strong>Not Recomended</strong> <small id="mydiv"></small>
                                                <% } %>
                                            </strong><%= result.num_reviews %> Reviews </div>
                                        <span><%= result.rating %></span>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="list-single-hero-links">
                                    <a class="custom-scroll-link lisd-link" href="#sec6"><i
                                            class="far fa-share-alt"></i> Share</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="breadcrumbs-hero-buttom fl-wrap">
                        <div class="breadcrumbs"><a href="/">Home</a><a
                                href="/collection">Favorites</a><span><%= result.address.split(',').pop() %></span></div>
                        <div class="list-single-hero-price">Price Level<span><%= result.price_level %></span></div>
                    </div>
                </div>
            </div>
        </section>
        <!--  section  -->
        <section class="grey-blue-bg small-padding scroll-nav-container" id="sec2">
            <div class="scroll-nav-wrapper fl-wrap">
                <div class="hidden-map-container fl-wrap">
                    <div class="map-container">
                        <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0"
                            marginwidth="0"
                            src="https://maps.google.com/maps?q=31.3344,34.3223&hl=en&z=14&amp;output=embed">
                        </iframe>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="container">
                    <nav class="scroll-nav scroll-init">
                        <ul>
                            <li><a class="act-scrlink" href="#sec1">Top</a></li>
                            <li><a href="#sec2">Details</a></li>
                            <li><a href="#sec3">Amenities</a></li>
                            <li><a href="#sec5">Reviews</a></li>
                        </ul>
                    </nav>
                    <a href="#" class="show-hidden-map">
                        <span>On The Map</span>
                        <i class="fal fa-map-marked-alt"></i>
                    </a>
                </div>
            </div>
            <!--   container  -->
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="list-single-main-container ">
                            <!-- <div class="fixed-scroll-column">
                                <div class="fixed-scroll-column-item fl-wrap">
                                    <div class="showshare sfcs fc-button"><i class="far fa-share-alt"></i></div>
                                </div>
                            </div> -->

                            <div class="list-single-main-item fl-wrap">
                                <div class="list-single-main-item-title fl-wrap">
                                    <h3>Description </h3>
                                </div>
                                <p><%= result.description %></p>

                            </div>
                            <!--   list-single-main-item -->
                            <div class="list-single-main-item fl-wrap" id="sec3">
                                <div class="list-single-main-item-title fl-wrap">
                                    <h3>Amenities</h3>
                                </div>
                                <div class="listing-features fl-wrap">
                                    <ul>
                                        <li><i class="fal fa-wifi"></i> Free Wi Fi</li>
                                        <li><i class="fal fa-parking"></i> Free Parking</li>
                                        <li><i class="fal fa-snowflake"></i> Air Conditioned</li>
                                        <li><i class="fal fa-paw"></i> Pet Friendly</li>
                                        <li><i class="fal fa-wheelchair"></i> Wheelchair Friendly</li>
                                    </ul>
                                </div>

                            </div>
                            <!-- list-single-main-item -->
                            <div class="list-single-main-item fl-wrap" id="sec5">
                                <div class="list-single-main-item-title fl-wrap">
                                    <h3>Reviews</h3>
                                </div>
                                <div class="reviews-comments-wrap">
                                    <% reviewData.forEach ( item => { %>
                                    <div class="reviews-comments-item">
                                        <div class="review-comments-avatar">
                                            <img src="images\avatar\1.jpg" alt="">
                                        </div>
                                        <div class="reviews-comments-item-text">
                                            <h4>
                                                <a href="#">
                                                    <%= item.name %>
                                                </a>
                                            </h4>
                                            <div class="review-score-user">
                                                <span><%= item.score %></span>
                                                <% if(result.rating >= 4) { %>
                                                    <strong>Recomended</strong> <small id="mydiv"></small>
                                                    <% } else if( item.rating  >= 3){ %>
                                                    <strong> Verry Good</strong> <small id="mydiv"></small>
                                                    <% } else if( item.rating  >= 2){ %>
                                                    <strong>Good</strong> <small id="mydiv"></small>
                                                    <% } else { %>
                                                    <strong>Not Recomended</strong> <small id="mydiv"></small>
                                                    <% } %>
                                            </div>
                                            <div class="clearfix"></div>
                                            <p>
                                                <%= item.review %>
                                            </p>
                                            <div class="reviews-comments-item-date"><span><i
                                                        class="far fa-calendar-check"></i><%= item.review_date.toString().slice(0, 15); %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <%  }) %>
                                </div>
                            </div>
                            <!-- list-single-main-item -->
                            <div class="list-single-main-item fl-wrap" id="sec6">
                                <div class="list-single-main-item-title fl-wrap">
                                    <h3>Add Review</h3>
                                </div>
                                <div id="add-review" class="add-review-box">
                                    <form action="/restRev?id=<%= result.id %>" method="POST" id="add-comment"
                                        class="add-comment  custom-form" name="rangeCalc">
                                        <fieldset>
                                            <div class="review-score-form fl-wrap">
                                                <div class="review-range-container">
                                                    <div class="review-range-item">
                                                        <div class="range-slider-title">Score</div>
                                                        <div class="range-slider-wrap ">
                                                            <input type="text" class="rate-range" data-min="0"
                                                                data-max="5" name="rgcl" data-step="1" value="4">
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="hidden" name="rg_total" data-form="AVG({rgcl})" value="0">
                                            </div>
                                            <div class="">
                                                <div class="col-md-6">
                                                    <label><i class="fal fa-user"></i></label>
                                                    <input type="text" name="name" placeholder="Your Name *" value="">
                                                </div>
                                                <div class="col-md-6">
                                                    <label><i class="fal fa-envelope"></i> </label>
                                                    <input type="text" name="email" placeholder="Email Address*"
                                                        value="">
                                                </div>
                                            </div>
                                            <textarea cols="40" name="review" rows="3"
                                                placeholder="Your Review:"></textarea>
                                        </fieldset>
                                        <button class="btn  big-btn flat-btn float-btn color2-bg"
                                            style="margin-top:30px">Submit Review <i
                                                class="fal fa-paper-plane"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--   sidebar  -->
                    <div class="col-md-4">
                        <div class="box-widget-wrap">
                            <div class="box-widget-item fl-wrap">
                                <div class="box-widget">
                                    <div class="box-widget-content">
                                        <div class="box-widget-item-header">
                                            <h3> Contact Information</h3>
                                        </div>
                                        <div class="box-widget-list">
                                            <ul>
                                                <li><span><i class="fal fa-map-marker"></i> Address :</span> <a
                                                        href="#"><%= result.address %></a></li>
                                                <li><span><i class="fal fa-phone"></i> Phone :</span> <a
                                                        href="tel:<%= result.description %>"><%= result.phone %></a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="list-widget-social">
                                            <ul>
                                                <li><a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                                </li>
                                                <li><a href="#" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                                <li><a href="#" target="_blank"><i class="fab fa-vk"></i></a></li>
                                                <li><a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="limit-box fl-wrap"></div>
</div>


<%- include('../layout/footer') %>